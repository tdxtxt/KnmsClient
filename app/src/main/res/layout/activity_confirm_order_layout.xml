<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_F5F5F5"
    android:orientation="vertical">

    <View
        style="@style/line_comm_style"
        android:layout_above="@+id/confirm_order_bottom" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_preview_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/confirm_order_bottom"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="46dp"></android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/confirm_order_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/color_black_333333" />

        <TextView
            android:id="@+id/tv_conmit_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/yellow"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:text="提交订单"
            android:textColor="@color/color_black_333333" />
    </LinearLayout>

    <include
        android:id="@+id/view_top"
        layout="@layout/top_title_layout" />

</RelativeLayout>