<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/view"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:paddingRight="18dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/sign_63" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_icon_right"
            android:layout_toRightOf="@+id/iv_back"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_jzfg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="家居风格"
                    android:textColor="#666666"
                    android:textSize="16dp" />

                <View
                    android:id="@+id/view_line_style"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignLeft="@+id/tv_jzfg"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/tv_jzfg"
                    android:layout_marginBottom="4dp"
                    android:background="@color/tab_line" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_knowledge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_jjbk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="家居百科"
                    android:textColor="#666666"
                    android:textSize="16dp" />

                <View
                    android:id="@+id/view_line_knowledge"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignLeft="@+id/tv_jjbk"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/tv_jjbk"
                    android:layout_marginBottom="4dp"
                    android:background="@color/tab_line" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_icon_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:padding="4dp"
            android:src="@drawable/home_12"
            android:visibility="visible" />

        <View
            style="@style/line_comm_style"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>