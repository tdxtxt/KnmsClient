<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_title"
        layout="@layout/top_title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E6E6E6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="手机号快捷登录"
        android:textColor="#333333"
        android:textStyle="normal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" >

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:drawableLeft="@drawable/sign_44"
            android:drawablePadding="4dp"
            android:hint="请输入你的电话号码"
            android:maxLength="11"
            android:numeric="integer"
            android:textColor="#333333"
            android:textSize="14dp" />

        <com.knms.view.TimerButton
            android:id="@+id/get_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/sign_57"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/button_text_on"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/cancel_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/get_verification_code"
            android:padding="4dp"
            android:src="@drawable/sign_67"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E6E6E6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" >

        <EditText
            android:id="@+id/verification_code"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/sign_46"
            android:drawablePadding="4dp"
            android:hint="请输入6位短信验证码"
            android:maxLength="6"
            android:numeric="integer"
            android:textColor="#333333"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/cancel_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:src="@drawable/sign_67"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E6E6E6" />

    <TextView
        android:id="@+id/account_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="30dp"
        android:text="账号密码登录"
        android:textColor="#fdcd00"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:padding="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign_52"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/color_gray_999999"
        android:textSize="14dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal" >

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:text="登录/注册代表你已同意"
            android:textColor="#999999"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/agreement"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginBottom="40dp"
            android:layout_toRightOf="@+id/text"
            android:gravity="center"
            android:text="《铠恩买手协议》"
            android:textColor="#f4d66d"
            android:textSize="10dp" />
    </RelativeLayout>

</LinearLayout>