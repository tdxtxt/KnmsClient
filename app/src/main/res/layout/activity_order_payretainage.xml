<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/top_title_layout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:padding="10dp"
            android:text="付款订单"
            android:textColor="@color/color_black_333333"
            android:textSize="14sp" />

        <FrameLayout
            android:id="@+id/chooser_pay_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_border_gray_rectangle"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_shopname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp"
                    android:paddingLeft="7dp"
                    android:paddingTop="3dp"
                    android:text="长实简义  合同号123456"
                    android:textColor="@color/color_black_333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_order_createtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:text="订货时间：2012-03-30   合同金额：810"
                    android:textColor="@color/color_black_666666"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_please_choose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="2dp"
                android:background="@color/color_white"
                android:drawableRight="@drawable/icon_un_flod"
                android:gravity="center_vertical"
                android:text="请选择付款订单"
                android:textColor="@color/color_black_666666"
                android:visibility="visible" />

        </FrameLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/color_white"
            android:padding="10dp"
            android:text="付款金额(¥)："
            android:textColor="@color/color_black_333333"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <com.knms.view.XEditText
                android:id="@+id/et_payment_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_border_gray_rectangle"
                android:hint="请与商家确认后输入付款金额"
                android:paddingBottom="10dp"
                android:paddingLeft="7dp"
                android:inputType="number"
                android:paddingRight="7dp"
                android:paddingTop="10dp"
                android:textColor="@color/color_black_666666"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_topay"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_rectangle_btn"
        android:gravity="center"
        android:text="去付款"
        android:textColor="@color/color_black_333333"
        android:textSize="14dp" />

</RelativeLayout>