<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/no_color"
    android:orientation="vertical">
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <View
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/no_color"/>
    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥2399"
                android:textSize="16sp"
                android:layout_marginLeft="110dp"
                android:textColor="@color/color_red_EE4B62"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="库存:  3件"
                android:textColor="@color/color_black_333333"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/tv_price"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/ivBtn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/icon_coupons_close"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/line_comm_style"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <com.knms.view.MaxHeightLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mhv_HeightRatio="0.65">
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/layout_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
                <RelativeLayout
                    android:id="@+id/rl_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/tv_buy_count_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购买数量"
                        android:layout_alignParentLeft="true"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/color_black_333333"/>
                    <TextView
                        android:id="@+id/tv_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black_666666"
                        android:textSize="12sp"
                        android:layout_toRightOf="@+id/tv_buy_count_title"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:text=""/>
                    <com.knms.view.tv.CounterView
                        android:id="@+id/countView"
                        android:layout_height="28dp"
                        android:layout_width="120dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        </com.knms.view.MaxHeightLinearLayout>
        <TextView
            android:id="@+id/tvBtn_confirm"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="确定"
            android:background="@color/yellow"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/color_black_333333"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#EAE3FF"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/ll_layout"
        android:layout_marginTop="-18dp"/>
</RelativeLayout>