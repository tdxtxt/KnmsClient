<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@color/color_white">
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:id="@+id/view_sbo"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <ImageView
                android:id="@+id/information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/home_12" />
            <ImageView
                android:id="@+id/rich_scan"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/qie_83" />
            <RelativeLayout
                android:id="@+id/rlBtn_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/rich_scan"
                android:background="@drawable/bg_search"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/in_box"
                    android:maxLines="1"
                    android:paddingLeft="4dp"
                    android:text="搜索商品/店铺"
                    android:textColor="#666666"
                    android:drawablePadding="4dp"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#333333"
                    android:textSize="16dp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/browse_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#999999"
                    android:textSize="12dp"
                    android:textStyle="normal" />
            </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
</FrameLayout>