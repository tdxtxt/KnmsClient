<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welfare_service_centent_layout"
    android:background="@drawable/yhq_03"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/coupons_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/ll_right"
        android:singleLine="true"
        android:text="阳光彼岸阳光彼岸阳光彼岸"
        android:textColor="@color/color_white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coupons_name"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="¥"
            android:textColor="@color/color_white"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/coupons_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="50"
            android:textColor="@color/color_white"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/coupons_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/coupons_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/tv_coupon_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:text="2016.2.30-2016.3.30"
            android:textColor="@color/color_white" />
    </LinearLayout>

    <ImageView
        android:id="@+id/coupons_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:scaleType="centerInside" />

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/get_coupons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/yhq_02"
            android:gravity="center"
            android:text="立即使用"
            android:textColor="#A97700" />

        <TextView
            android:id="@+id/coupons_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="AB000000001"
            android:textColor="@color/color_white"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_show_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="97dp"
        android:layout_marginTop="49dp"
        android:background="@drawable/bg_yhq_show_time"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:rotation="-15"
        android:text="12月12日领取"
        android:textColor="@color/common_red"
        android:textSize="12sp"
        android:textStyle="bold" />
    </RelativeLayout>
    <TextView
        android:id="@+id/coupons_rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:text="使用规则使用规则使用规则使用规则使用规则"
        android:textColor="#666"
        android:textSize="12sp" />
</LinearLayout>