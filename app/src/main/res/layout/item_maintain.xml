<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:padding="12dp">

    <com.knms.view.CircleImageView
        android:id="@+id/maintain_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_3" />

   <RelativeLayout
        android:id="@+id/maintain_top_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/view"
        android:layout_toRightOf="@+id/maintain_logo"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/maintain_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:maxLength="14"
            android:ellipsize="end"
            android:text="fsdfsdafsdfsdfsadsfsadfasfdf"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/maintain_name"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:maxLines="1"
            android:padding="3dp"
            android:background="@drawable/bg_rectangle_btn"
            android:text="实名认证" />
    </RelativeLayout>

    <TextView
        android:id="@+id/maexperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maintain_top_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/maintain_logo"
        android:textColor="@color/gray_aaaaaa"
        android:text="从业经验：3年" />

    <TextView
        android:id="@+id/maremark"
        android:layout_toLeftOf="@+id/maintain_dial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maintain_logo"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:singleLine="true"
        android:text=""
        android:textSize="12sp"
        android:textColor="@color/black" />

    <View
        android:id="@+id/view"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/botton_view"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/maintain_dial"
        android:background="@color/common_line_color" />

    <ImageView
        android:id="@+id/maintain_dial"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_call" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/maremark"
        android:id="@+id/botton_view"
        android:layout_marginTop="10dp"
        android:background="@color/common_line_color"/>

</RelativeLayout>