<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_order_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingLeft="7dp"
        android:paddingTop="10dp"
        android:text="长实简义  合同号123456"
        android:textColor="@color/color_black_333333"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_order_time_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_order_name"
        android:paddingBottom="10dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:text="订货时间：2012-03-30   合同金额：810"
        android:textColor="@color/color_black_666666"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/cb_checked_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@null"
        android:drawableLeft="@drawable/checkbox_choose_pay_order"
        android:padding="10dp" />

    <View
        android:layout_alignParentBottom="true"
        style="@style/line_comm_style"/>
</RelativeLayout>
