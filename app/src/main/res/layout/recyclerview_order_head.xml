<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="6dp"
        android:background="#E6E6E6" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="联系人"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/relation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E6E6E6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="联系电话"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/relation_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13527419854"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E6E6E6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="订货时间"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-08-01  10:10"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E6E6E6" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="送货时间"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal"
            android:id="@+id/textView6" />

        <TextView
            android:id="@+id/delivery_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-08-01  10:10"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E6E6E6" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:minHeight="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="送货地址"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/delivery_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="重庆市渝中区显示16个字，超出16个字自动换行显示"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E6E6E6" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="合同号"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/contract_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20464545"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E6E6E6" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="合同金额"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/contract_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥2546.00"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E6E6E6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="已付款"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/account_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥2546.00"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E6E6E6" />

    <RelativeLayout
        android:id="@+id/refund_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="已退款"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/refund"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥2546.00"
            android:layout_marginLeft="80dp"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal" />

        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"
            android:background="#E6E6E6" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="合同状态"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/contract_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已付款"
            android:textColor="#333333"
            android:textSize="12dp"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E6E6E6" />

    <TextView
        android:id="@+id/tv_order_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F78786"
        android:padding="5dp"
        android:textColor="@color/color_white"
        android:visibility="gone" />
</LinearLayout>