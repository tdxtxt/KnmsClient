<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@color/color_white">

    <com.knms.view.indicator.ScrollViewTabIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:textAppearance="@style/style_tab_selector"
        app:tpi_indicatorColor="@color/yellow"
        app:tpi_indicatorHeight="3dp"
        app:tpi_indicatorMode="wrap_content"
        app:tpi_mode="fixed"
        app:tpi_underLineColor="#00000000" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        style="@style/line_comm_style"
        android:layout_alignParentTop="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        style="@style/line_comm_style"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
