<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlBtn_mstj"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="买&#160;手&#160;特&#160;价"
            android:textColor="@color/color_black_333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_mstj_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/color_black_666666"
            android:textSize="13sp" />

        <View
            style="@style/line_comm_style"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_mstj_1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_ad_mstj_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            style="@style/line_comm_style"
            android:layout_width="0.5dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_ad_mstj_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <View style="@style/line_comm_style" />

    <LinearLayout
        android:id="@+id/ll_mstj_2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_ad_mstj_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            style="@style/line_comm_style"
            android:layout_width="0.5dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_ad_mstj_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            style="@style/line_comm_style"
            android:layout_width="0.5dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_ad_mstj_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
    <View
        style="@style/line_comm_style"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
</LinearLayout>